<div>
    <b id="hyphenation">{{this.[0].word}}</b>
    {{#if this.[0].pluralOf}}
        <span> {{this.[0].pluralOf}}</span>
    {{/if}}
    <span id="pronunciation"></span>
    <button id="play-button" class="widget-button"><i id="play-icon"></i></button>
</div>
{{#each this}}
    <div class="definition">
        <em>{{part partOfSpeech}}</em>
        <span>{{{format text}}}</span>
    </div>
{{/each}}