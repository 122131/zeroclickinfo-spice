{{! Put the iframe here}}<iframe width="100%" height="360" src="{{embedURL provider id}}" frameborder="0" allowfullscreen></iframe><div>  <a href='{{playURL provider id}}' title="{{title}}">{{title}}</a></div>{{#checkStatistics statistics.viewCount}}  <div class="description">{{formatViews viewCount}} views</div>{{/checkStatistics}}{{! Only show this part if the video is in the category "Music"}}{{#checkMusic category title}}  <span class="links">      <a href='javascript:void(0);' class='app_platform' onclick='ddg_spice_video.set_itunes(this);' data-title='{{title}}' data-artist='{{artist}}' data-song='{{song}}' id='itunes'>    <img src="https://icons.duckduckgo.com/i/www.apple.com.ico" class="favicon">    iTunes    </a>    <a href='/?q=!spotify {{title}}' class='app_platform'>    <img src="https://icons.duckduckgo.com/i/www.spotify.com.ico" class="favicon">    Spotify  </a>    <a href='/?q=!a {{title}}' class='app_platform'>    <img src="https://icons.duckduckgo.com/i/www.amazon.com.ico" class="favicon">    Amazon    </a>  </span>{{/checkMusic}}