<div>
    {{#with album}}
        <div>
            <em>Artist:</em>
            {{artist}}
        </div>
        {{#releasedate releasedate}}
            <div>
                <em>Release Date:</em>
                {{date}}
            </div>
        {{/releasedate}}
        {{#checkTracks tracks}}
            <div>
                <em>Songs:</em>
                {{#list track}}<a href="{{this.url}}">{{this.name}}</a>{{/list}}
            </div>
        {{/checkTracks}}
        {{#if wiki}}
            {{#if wiki.summary}}
                <div>
                    <span id="some"><em>Description:</em> {{snippet wiki.summary "some"}}</span>
                    <a id="expand" href="javascript:;">
                        <span>More...</span>
                    </a>
                    <span id="all"><em>Description:</em> {{snippet wiki.summary "all"}}</span>
                </div>
            {{/if}}
        {{/if}}
    {{/with}}
</div>