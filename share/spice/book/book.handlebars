<div id="book_data_box" >
    {{#if author}}
        <div><span class="book_data_item">Author:</span>{{author}}</div>
    {{/if}}   

    {{#if genre}}
        <div><span class="book_data_item">Genre: </span>{{genre}}</div>
    {{/if}}

    {{#if rating}}
        <div title="based on {{review_count}} critic reviews"><span class="book_data_item">Critic Rating:</span>
        <img id="book-rating-visual" src="{{to_read_or_not}}" width="30"><span class="book_critic_rating"> {{rating}}% </span></div>
    {{/if}} 
</div>

<span>
    {{#if critic_review}}
        <span>  &ldquo;{{condense critic_review.snippet maxlen="300"}}&rdquo; </span>
        <div id="critic-link"> - <a href={{critic_review.review_link}}>{{critic_review.source}}</a> {{#if critic_review.review_date}}({{critic_review.review_date}}) {{/if}}</div>
    {{/if}}
</span>


