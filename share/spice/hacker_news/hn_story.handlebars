<div class="hn_story">
	{{#if url}}
		<a href="{{url}}">{{{condense title maxlen="50"}}}</a>
	{{else}}
		{{{condense title maxlen="50"}}}
	{{/if}}
	<span class="hn_oneline">
		 [<a href="http://news.ycombinator.com/item?id={{{id}}}">{{{num_comments}}} comment{{{plural num_comments}}}</a>]
		{{#if domain}}
			({{domain}}, {{{points}}} point{{{plural points}}})
		{{else}}
			({{{points}}} point{{{plural points}}})
		{{/if}}
	</span>
</div>