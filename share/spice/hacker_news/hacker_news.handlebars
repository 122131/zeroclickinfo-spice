{{#organizeResults}}
	
	{{#each topStories}}
		<div class="hn_story">
			{{#if url}}
				<a href="{{url}}">{{{condense title maxlen="50"}}}</a>
			{{else}}
				{{{condense title maxlen="50"}}}
			{{/if}}
			<span class="hn_oneline">
				 <a href="http://news.ycombinator.com/item?id={{{id}}}">{{{num_comments}}} comment{{{plural num_comments}}}</a>
				{{#if domain}}
					({{domain}}, {{{hn_points}}} points{{{plural hn_points}}})
				{{else}}
					({{{hn_points}}} points{{{plural hn_points}}})
				{{/if}}
			</span>
		</div>
	{{/each}}

	{{#if topComments}}
		{{#if topStories}}
			<hr class="horizontal_line">
			<a href="javascript:;" data-target="#topComments" class="hn_showHide">Top Comments</a>
			<div id="topComments" class="hide">
		{{else}}
			<div id="topComments">
		{{/if}}
				{{#each topComments}}
				<div class="hn_comment">
					{{{hn_comment text}}}
					<span class="hn_oneline">
						[by {{{user_link username}}}]
						[{{{item_link "parent"}}}]
						{{#if discussion}}
							{{{item_link discussion.title}}}
						{{else}}
							{{{item_link title}}}
						{{/if}}
					</span>
				</div>
				{{/each}}
			</div>
	{{/if}}

	{{#if otherStories}}
		<hr class="horizontal_line">
		<a href="javascript:;" data-target="#otherStories" class="hn_showHide">Other Stories</a>
		<div id="otherStories" class="hide">
			{{#each otherStories}}
			<div class="hn_story">
				{{#if url}}
					<a href="{{url}}">{{{condense title maxlen="50"}}}</a>
				{{else}}
					{{{condense title maxlen="50"}}}
				{{/if}}
				<span class="hn_oneline">
				 [<a href="http://news.ycombinator.com/item?id={{{id}}}">{{{num_comments}}} comment{{{plural num_comments}}}</a>]
					{{#if domain}}
						({{domain}}, {{{hn_points}}} points{{{plural hn_points}}})
					{{else}}
						({{{hn_points}}} points{{{plural hn_points}}})
					{{/if}}
				</span>
			</div>
			{{/each}}
		</div>
	{{/if}}
{{/organizeResults}}