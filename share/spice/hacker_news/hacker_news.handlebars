{{#organizeResults}}
	
	{{#each topStories}}
		{{! Use hn_story partial}}
		{{{include "hn_story"}}}
	{{/each}}

	{{#if topComments}}
		{{#if topStories}}
			<hr class="horizontal_line">
			<a data-target="#topComments" class="hn_showHide">Top Comments</a>
			<div id="topComments" class="hide">
		{{else}}
			<div id="topComments">
		{{/if}}
				{{#each topComments}}
				<div class="hn_comment">
					{{#strip_html text}}
						{{condense this maxlen="120"}}
					{{/strip_html}}
					<small class="hn_oneline">
						[by {{{user_link username}}}]
						[{{{item_link "parent"}}}]
						{{#if discussion}}
							{{{item_link discussion.title}}}
						{{else}}
							{{{item_link title}}}
						{{/if}}
					</small>
				</div>
				{{/each}}
			</div>
	{{/if}}

	{{#if otherStories}}
		<hr class="horizontal_line">
		<a data-target="#otherStories" class="hn_showHide">Other Stories</a>
		<div id="otherStories" class="hide">
			{{#each otherStories}}
				{{! Use hn_story partial}}
				{{{include "hn_story"}}}
			{{/each}}
		</div>
	{{/if}}
{{/organizeResults}}